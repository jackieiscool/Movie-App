<h1>Welcome to the Movies App!</h1>

<%= form_tag "/", method: "GET" do %>
  <%= text_field_tag :q, params[:q] %>
  <%= submit_tag "Search" %>
<% end %>

<br/><br/>

<% @movies.each do |movie| %>
  <section>
    <header>
      (<b><%= movie.year_released %></b>)
      <%= link_to movie.title, movie %>
    </header>
    <%= movie.description %>
  </section>
  <br/>
<% end %>
